@charset "utf-8";

$black: #491712;

body {
  background: #d4d4d4 url("../images/background.png");
  font-family: 'Helvetica Neue', Arial, 'Liberation Sans', FreeSans, sans-serif;
  color: $black;
  font-size: 18px;
  line-height: 24px;
}

a {
  color: #c43f33;
}

h1 {
  margin-top: 40px;
}

#logo {
  width: 395px;
  height: 300px;
  background-image: url(<%= image_path('logo-medium.png') %>);
  background-repeat: no-repeat;
  margin: 0 auto;
}

#help-out {
  margin: 0 auto;
  width: 650px;

  ul {
    list-style: none;

    li {
      margin-left: -35px;

      span.type {
        font-weight: bold;
      }
    }
  }
}

